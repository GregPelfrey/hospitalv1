<h1>Patient List</h1>

<%= link_to "Home", root_path %>
<%= link_to "New Patient", new_hospital_patient_path %>

  <ul>
    <% @patients.each do |patient| %>
    <li>
      First Name: <%= patient.first_name %><br>
      Last Name: <%= patient.last_name %><br>
      Birth Date: <%= patient.date_of_birth %><br>
      Symptom: <%= patient.description %><br>
      Gender: <%= patient.gender %><br>
      Blood Type: <%= patient.blood_type %>
    
    <%= link_to "Edit", edit_hospital_patient_path(@hospital, patient) %>
    <%= link_to "Delete", hospital_patient_path(@hospital, patient), method: :delete %><br>
    </li>
    <% end %>
  </ul>
   <br>
   
